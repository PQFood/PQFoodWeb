<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h3 class="section-title ff-secondary text-center text-primary fw-normal">Thực đơn</h3>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
            <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-5">
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 active" data-bs-toggle="pill"
                        href="#tab-1">
                        <i class="fa fa-hamburger fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Danh sách</small>
                            <h6 class="mt-n1 mb-0">Thức ăn</h6>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 pb-3" data-bs-toggle="pill" href="#tab-2">
                        <i class="fa fa-coffee fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Danh sách</small>
                            <h6 class="mt-n1 mb-0">Nước giải khát</h6>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 me-0 pb-3" data-bs-toggle="pill" href="#tab-3">
                        <i class="fas fa-trash fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Danh sách</small>
                            <h6 class="mt-n1 mb-0">Thùng rác</h6>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 me-0 pb-3" data-bs-toggle="pill"
                        href="#tab-add">
                        <i class="fas fa-plus fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Thêm</small>
                            <h6 class="mt-n1 mb-0">Thực đơn</h6>
                        </div>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">

                    <div class="row g-4">
                        {{#if menuFoods}}
                        {{#each menuFoods}}
                        <div class="col-lg-6">
                            <div class="d-flex align-items-center">
                                <img class="flex-shrink-0 img-fluid rounded" src="{{this.image}}" alt=""
                                    style="width: 80px;">
                                <div class="w-100 d-flex flex-column text-start ps-4">
                                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                                        <span>
                                            {{this.name}}
                                            <a href="/admin/editFood/{{this.slug}}"><i
                                                    class="fas fa-pen-square"></i></a>
                                            <a href="#" onclick="btnDelete('{{this.slug}}')"><i
                                                    class="fas fa-trash-alt"></i></a>
                                        </span>
                                        <span class="number text-primary">{{this.price}}</span>
                                    </h5>
                                    <small class="fst-italic">{{this.description}}</small>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{/if}}
                    </div>
                </div>
                <div id="tab-2" class="tab-pane fade show p-0">
                    <div class="row g-4">
                        {{#if menuDinks}}
                        {{#each menuDinks}}
                        <div class="col-lg-6">
                            <div class="d-flex align-items-center">
                                <img class="flex-shrink-0 img-fluid rounded" src="{{this.image}}" alt=""
                                    style="width: 80px;">
                                <div class="w-100 d-flex flex-column text-start ps-4">
                                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                                        <span>
                                            {{this.name}}
                                            <a href="/admin/editFood/{{this.slug}}"><i
                                                    class="fas fa-pen-square"></i></a>
                                            <a href="#" onclick="btnDelete('{{this.slug}}')"><i
                                                    class="fas fa-trash-alt"></i></a>
                                        </span>
                                        <span class="number text-primary">{{this.price}}</span>
                                    </h5>
                                    <small class="fst-italic">{{this.description}}</small>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{/if}}
                    </div>
                </div>
                <div id="tab-3" class="tab-pane fade show p-0">
                    <div class="row g-4">
                        {{#if menuDeleted}}
                        {{#each menuDeleted}}
                        <div class="col-lg-6">
                            <div class="d-flex align-items-center">
                                <img class="flex-shrink-0 img-fluid rounded" src="{{this.image}}" alt=""
                                    style="width: 80px;">
                                <div class="w-100 d-flex flex-column text-start ps-4">
                                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                                        <span>
                                            {{this.name}}
                                            <a href="#"><i class="fas fa-trash-undo"></i></a>
                                        </span>
                                        <span class="number text-primary">{{this.price}}</span>
                                    </h5>
                                    <small class="fst-italic">{{this.description}}</small>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{else}}
                        <h3 class="mt-3 mb-3" style="text-align: center; color:rgb(194, 174, 230);">Không có thực đơn
                            nào bị xóa!</h3>
                        {{/if}}
                    </div>
                </div>
                <div id="tab-add" class="tab-pane fade show p-0">
                    <div class="col bg-dark d-flex align-items-center" id="cach">
                        <div class="p-5 wow fadeInUp" data-wow-delay="0.2s">
                            <h5 class="section-title ff-secondary text-start text-primary fw-normal">Thêm thức ăn/thức
                                uống</h5>
                            <form action="/admin/submitAddForm" method="post" id="formAddFood"
                                enctype="multipart/form-data">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="nameFood" name="nameFood"
                                                placeholder="Tên thức ăn/thức uống">
                                            <label for="nameFood">Tên thức ăn/thức uống</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="price" name="price"
                                                placeholder="Giá (VNĐ)">
                                            <label for="price">Giá (VNĐ)</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="file" class="form-control" id="image" name="image"
                                                placeholder="Hình ảnh">
                                            <label for="image">Hình ảnh</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <select class="form-select" id="classify" name="classify">
                                                <option value="1">Thức ăn</option>
                                                <option value="2">Thức uống</option>
                                            </select>
                                            <label for="classify">Loại</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="form-floating">
                                            <textarea class="form-control" placeholder="Mô tả chi tiết" id="description"
                                                name="description" style="height: 100px"></textarea>
                                            <label for="description">Mô tả chi tiết</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100 py-3" type="submit">Thêm</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>

    function btnDelete(slug) {
        Swal.fire({
            title: 'Bạn có chắc muốn xóa thức ăn này?',
            text: "Hành động có thể tổn hại đến dữ liệu!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Tiếp tục',
            cancelButtonText: 'Quay lại'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.replace("/admin/deleteFood/" + slug);
            }
        })
    }
</script>