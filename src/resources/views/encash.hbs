<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h3 class="section-title ff-secondary text-center text-primary fw-normal">Hóa đơn</h3>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
            <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-5">
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 active" data-bs-toggle="pill"
                        href="#tab-1">
                        <i class="fas fa-money-check-alt fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Xác nhận</small>
                            <h6 class="mt-n1 mb-0">Thanh toán</h6>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 pb-3" data-bs-toggle="pill" href="#tab-2">
                        <i class="fas fa-money-bill fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Hóa đơn</small>
                            <h6 class="mt-n1 mb-0">Hiện tại</h6>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 me-0 pb-3" data-bs-toggle="pill" href="#tab-3">
                        <i class="fas fa-history fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Lịch sử</small>
                            <h6 class="mt-n1 mb-0">Hóa đơn</h6>
                        </div>
                    </a>
                </li>

            </ul>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">

                    <div class="row g-4">
                        {{#if waitConfirm}}
                        {{#each waitConfirm}}
                        <div class="col-lg-6">
                            <div class="d-flex align-items-center p-2" style="background-color: lightblue;">
                                <div class="w-100 d-flex flex-column text-start">
                                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                                        <span>
                                            {{this.dinnerTableName}} - {{this.orderId}}
                                        </span>
                                        <span class="number text-primary">{{this.total}}</span>
                                    </h5>
                                    <div class="d-flex justify-content-between">
                                        <div class="">
                                            {{#each this.order}}
                                            <div class="">
                                                <small class="fst-italic">{{this.name}} sl: {{this.quantity}} {{this.price}}</small>
                                            </div>
                                            {{/each}}
                                        </div>
                                        <div class="">
                                            <small class="fst-italic">{{this.staff}}</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="btn btn-primary w-100 py-3" type="submit">Xác nhận</button>
                        </div>
                        {{/each}}
                        {{else}}
                        <h3 class="mt-3 mb-3" style="text-align: center; color:rgb(194, 174, 230);">Không có hóa đơn nào
                            chờ xác nhận thanh toán!</h3>
                        {{/if}}
                    </div>
                </div>
                <div id="tab-2" class="tab-pane fade show p-0">
                    <div class="row g-4">
                        {{#if menuDinks}}
                        {{#each menuDinks}}
                        <div class="col-lg-6">
                            <div class="d-flex align-items-center">
                                <img class="flex-shrink-0 img-fluid rounded" src="{{this.image}}" alt=""
                                    style="width: 80px;">
                                <div class="w-100 d-flex flex-column text-start ps-4">
                                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                                        <span>
                                            {{this.name}}
                                            <a href="/admin/editFood/{{this.slug}}"><i
                                                    class="fas fa-pen-square"></i></a>
                                            <a href="#" onclick="btnDelete('{{this.slug}}')"><i
                                                    class="fas fa-trash-alt"></i></a>
                                        </span>
                                        <span class="number text-primary">{{this.price}}</span>
                                    </h5>
                                    <small class="fst-italic">{{this.description}}</small>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{/if}}
                    </div>
                </div>
                <div id="tab-3" class="tab-pane fade show p-0">
                    <div class="row g-4">
                        {{#if menuDeleted}}
                        {{#each menuDeleted}}
                        <div class="col-lg-6">
                            <div class="d-flex align-items-center">
                                <img class="flex-shrink-0 img-fluid rounded" src="{{this.image}}" alt=""
                                    style="width: 80px;">
                                <div class="w-100 d-flex flex-column text-start ps-4">
                                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                                        <span>
                                            {{this.name}}
                                            <a href="#" onclick="btnDestroy('{{this.slug}}')"><i
                                                    class="fas fa-trash-alt"></i></a>
                                            <a href="/admin/restoreFood/{{this.slug}}"><i
                                                    class="fas fa-trash-restore"></i></a>
                                        </span>
                                        <span class="number text-primary">{{this.price}}</span>
                                    </h5>
                                    <small class="fst-italic">{{this.description}}</small>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{else}}
                        <h3 class="mt-3 mb-3" style="text-align: center; color:rgb(194, 174, 230);">Không có thực đơn
                            nào bị xóa!</h3>
                        {{/if}}
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<script>

    document.getElementById("linkHome").classList.remove("active");
    document.getElementById("linkEncash").classList.add("active");

    function btnDelete(slug) {
        Swal.fire({
            title: 'Bạn có chắc muốn xóa thức ăn này?',
            text: "Hành động có thể tổn hại đến dữ liệu!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Tiếp tục',
            cancelButtonText: 'Quay lại'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.replace("/admin/deleteFood/" + slug);
            }
        })
    }

    function btnDestroy(slug) {
        Swal.fire({
            title: 'Bạn có chắc muốn xóa vĩnh viễn thức ăn này?',
            text: "Bạn sẽ không thể khôi phục nếu tiếp tục!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Tiếp tục',
            cancelButtonText: 'Quay lại'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.replace("/admin/destroyFood/" + slug);
            }
        })
    }
</script>