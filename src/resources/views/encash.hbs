                                            </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="/admin/paymentConfirmShip/{{this.orderId}}"><button
                                    class="btn btn-primary w-100 py-3">Xác nhận</button></a>
