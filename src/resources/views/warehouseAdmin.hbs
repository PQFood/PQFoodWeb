<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h3 class="section-title ff-secondary text-center text-primary fw-normal">Quản lý kho</h3>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
            <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-5">
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 active" data-bs-toggle="pill"
                        href="#tab-1">
                        <i class="fa fa-solid fa-warehouse fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Danh sách</small>
                            <h6 class="mt-n1 mb-0">Sản phẩm</h6>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 me-0 pb-3" data-bs-toggle="pill" href="#tab-3">
                        <i class="fas fa-trash fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Danh sách</small>
                            <h6 class="mt-n1 mb-0">Thùng rác</h6>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 me-0 pb-3" data-bs-toggle="pill"
                        href="#tab-add">
                        <i class="fas fa-plus fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Thêm</small>
                            <h6 class="mt-n1 mb-0">Sản phẩm</h6>
                        </div>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="tab-1" class="tab-pane fade show p-0 active">

                    <div class="row g-4">
                        {{#if items}}
                        {{#each items}}
                        <div class="col-lg-6">
                            <div class="d-flex align-items-center">

                                <div class="w-100 d-flex flex-column text-start">
                                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                                        <span>
                                            {{this.name}}
                                            <a href="/admin/editItem/{{this.slug}}"><i
                                                    class="fas fa-pen-square"></i></a>
                                            <a href="#" onclick="btnDelete('{{this.slug}}')"><i
                                                    class="fas fa-trash-alt"></i></a>
                                        </span>

                                        <span class="text-primary">{{this.quantity}}&nbsp;{{this.unit}}</span>
                                    </h5>
                                    <small class="fst-italic">{{this.providerName}} - {{this.providerPhoneNumber}}</small>
                                    <small class="fst-italic">{{this.providerAddress}}</small>

                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{/if}}
                    </div>
                </div>

                <div id="tab-3" class="tab-pane fade show p-0">
                    <div class="row g-4">
                        {{#if itemDeleted}}
                        {{#each itemDeleted}}
                        <div class="col-lg-6">
                            <div class="d-flex align-items-center">

                                <div class="w-100 d-flex flex-column text-start">
                                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                                        <span>
                                            {{this.name}}
                                            <a href="#" onclick="btnDestroy('{{this.slug}}')"><i
                                                    class="fas fa-trash-alt"></i></a>
                                            <a href="/admin/restoreItem/{{this.slug}}"><i class="fas fa-trash-restore"></i></a>
                                        </span>

                                        <span class="text-primary">{{this.quantity}}&nbsp;{{this.unit}}</span>
                                    </h5>
                                    <small class="fst-italic">{{this.providerName}} - {{this.providerPhoneNumber}}</small>
                                    <small class="fst-italic">{{this.providerAddress}}</small>

                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{else}}
                        <h3 class="mt-3 mb-3" style="text-align: center; color:rgb(194, 174, 230);">Không có sản phẩm nào bị xóa!</h3>
                        {{/if}}
                    </div>
                </div>
                <div id="tab-add" class="tab-pane fade show p-0">
                    <div class="col bg-dark d-flex align-items-center" id="cach">
                        <div class="p-5 wow fadeInUp" data-wow-delay="0.2s">
                            <h5 class="section-title ff-secondary text-start text-primary fw-normal">Thêm sản phẩm mới
                            </h5>
                            <form action="/admin/submitAddItem" method="post" id="formAddItem">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="name" name="name"
                                                placeholder="Tên sản phẩm">
                                            <label for="name">Tên sản phẩm</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="unit" name="unit"
                                                placeholder="Đơn vị tính">
                                            <label for="unit">Đơn vị tính</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="quantity" name="quantity"
                                                placeholder="Số lượng">
                                            <label for="quantity">Số lượng</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="providerName"
                                                name="providerName" placeholder="Tên nhà cung cấp">
                                            <label for="providerName">Tên nhà cung cấp</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="providerPhoneNumber"
                                                name="providerPhoneNumber" placeholder="Số điện thoại nhà cung cấp">
                                            <label for="providerPhoneNumber">Số điện thoại nhà cung cấp</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="providerAddress"
                                                name="providerAddress" placeholder="Địa chỉ nhà cung cấp">
                                            <label for="providerAddress">Địa chỉ nhà cung cấp</label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100 py-3" type="submit">Thêm</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>

    document.getElementById("linkHome").classList.remove("active");
    document.getElementById("linkWarehouse").classList.add("active");

    function btnDelete(slug) {
        Swal.fire({
            title: 'Bạn có chắc muốn xóa sản phẩm này?',
            text: "Hành động có thể tổn hại đến dữ liệu!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Tiếp tục',
            cancelButtonText: 'Quay lại'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.replace("/admin/deleteItem/" + slug);
            }
        })
    }

    function btnDestroy(slug) {
        Swal.fire({
            title: 'Bạn có chắc muốn xóa vĩnh viễn sản phẩm này?',
            text: "Bạn sẽ không thể khôi phục nếu tiếp tục!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Tiếp tục',
            cancelButtonText: 'Quay lại'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.replace("/admin/destroyItem/" + slug);
            }
        })
    }
</script>