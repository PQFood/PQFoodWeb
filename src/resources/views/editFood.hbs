{{#if food}}
<div class="col bg-dark d-flex align-items-center">
    <div class="p-5 wow fadeInUp" data-wow-delay="0.2s">
        <h5 class="section-title ff-secondary text-start text-primary fw-normal">Điều chỉnh thông tin thức ăn/thức uống
        </h5>
        <form action="/admin/submitEditFood/{{food.slug}}" method="post" id="formEditFood" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="nameFood" name="nameFood"
                            placeholder="Tên thức ăn/thức uống" value="{{food.name}}">
                        <label for="nameFood">Tên thức ăn/thức uống</label>
                    </div>
                </div>
                <div style="display: none;" id="idEditFoodSelect">{{food.classify}}</div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control" id="price" name="price" placeholder="Giá (VNĐ)"
                            value="{{food.price}}">
                        <label for="price">Giá (VNĐ)</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="file" class="form-control" id="image" name="image" placeholder="Hình ảnh">
                        <label for="image">Hình ảnh</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select class="form-select" id="classify" name="classify" value="{{food.classify}}">
                            <option value="1" class="selectClassify">Thức ăn</option>
                            <option value="2" class="selectClassify">Thức uống</option>
                        </select>
                        <label for="classify">Loại</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <textarea class="form-control" placeholder="Mô tả chi tiết" id="description" name="description"
                            style="height: 100px">{{food.description}}</textarea>
                        <label for="description">Mô tả chi tiết</label>
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary w-100 py-3" type="submit">Cập nhật</button>
                </div>
            </div>
        </form>
    </div>
</div>

{{else}}
<h3 class="mt-3 mb-3" style="text-align: center; color:rgb(194, 174, 230);">Không tồn tại thức ăn này!</h3>
{{/if}}

<script>
    document.getElementById("linkHome").classList.remove("active");
    document.getElementById("linkMenu").classList.add("active");
    var classifyFood = Number(document.getElementById('idEditFoodSelect').innerText);
    var selectClassify = document.getElementsByClassName("selectClassify");
    for (x = 0; x < selectClassify.length; x++) {
        if (selectClassify[x].value == classifyFood) {
            selectClassify[x].selected = true;
        }
    } 
</script>