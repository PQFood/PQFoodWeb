<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h3 class="section-title ff-secondary text-center text-primary fw-normal">Tra cứu</h3>
        </div>
        <div class="tab-class text-center wow fadeInUp" data-wow-delay="0.1s">
            <ul class="nav nav-pills d-inline-flex justify-content-center border-bottom mb-5">
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 ms-0 pb-3 active" data-bs-toggle="pill"
                        href="#tab-table">
                        <i class="fas fa-search fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Tra cứu</small>
                            <h6 class="mt-n1 mb-0">Lịch đặt bàn</h6>
                        </div>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="d-flex align-items-center text-start mx-3 me-0 pb-3" data-bs-toggle="pill"
                        href="#tab-ship">
                        <i class="fas fa-shipping-fast fa-2x text-primary"></i>
                        <div class="ps-3">
                            <small class="text-body">Xem</small>
                            <h6 class="mt-n1 mb-0">Lịch giao thức ăn</h6>
                        </div>
                    </a>
                </li>
            </ul>
            <div class="tab-content">
                <div id="tab-table" class="tab-pane fade show p-0 active">

                    <div class="row g-4">
                        <form action="/search" method="get" id="revenueDay" class="mb-3">
                            <div class="d-flex justify-content-center">
                                <div class="form-group">
                                    <div class="input-group date" id="datetimepicker4" data-target-input="nearest">
                                        <input type="text" class="form-control datetimepicker-input w-75"
                                            data-target="#datetimepicker4" placeholder="Thời gian" id="timeInput"
                                            name="timeInput" style="height: 40px;"
                                            data-toggle="datetimepicker" />&nbsp;&nbsp;
                                        <div class="input-group-append" data-target="#datetimepicker4"
                                            data-toggle="datetimepicker">
                                            <div class="input-group-text" style="height: 40px;"><i
                                                    class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>&nbsp;&nbsp;
                                <div class="">
                                    <button class="btn btn-primary" type="submit" style="height: 40px;">Xem</button>
                                </div>
                            </div>
                        </form>
                        {{#if bookTableFind}}
                        {{#each bookTableFind}}
                        <div class="col-lg-6">

                            <div class="d-flex align-items-center">

                                <div class="w-100 d-flex flex-column text-start">
                                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                                        <span>
                                            {{this.name}}

                                        </span>

                                        <span class="text-primary">{{this.time}}</span>
                                    </h5>


                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{else}}
                        <h3 class="mt-3 mb-3" style="text-align: center; color:rgb(194, 174, 230);">Không ai đặt lịch
                            vào ngày này!</h3> <a href="/#bookTable" style="font-size: 30px;">Đặt lịch ngay!</a>
                        {{/if}}
                    </div>
                </div>
                <div id="tab-ship" class="tab-pane fade show p-0">
                    <div class="row g-4">
                        {{#if bookShipFind}}
                        {{#each bookShipFind}}
                        <div class="col-lg-6">
                            <div class="d-flex align-items-center">

                                <div class="w-100 d-flex flex-column text-start">
                                    <h5 class="d-flex justify-content-between border-bottom pb-2">
                                        <span>
                                            {{this.name}}
                                        </span>
                                        <span class="text-primary number">{{this.total}}</span>
                                    </h5>
                                    <div class="d-flex justify-content-between">
                                    {{#each this.order}}
                                    
                                        <small class="fst-italic">{{this.name}} - SL: {{this.quantity}} - ĐG:
                                            <span class="number">{{multiplication this.price
                                                this.quantity}}</span>
                                        </small>
                                    {{/each}}
                                    <small><span style="color: #ff9933;">{{this.state}}</span></small>
                                    </div>

                                </div>
                            </div>
                        </div>
                        {{/each}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>

    document.getElementById("linkHome").classList.remove("active");
    document.getElementById("linkSearch").classList.add("active");

    document.getElementById("linkService").href = "/#service";
    document.getElementById("linkAbout").href = "/#about";
    document.getElementById("linkMenu").href = "/#menu";
    document.getElementById("linkBookTable").href = "/#bookTable";

    function btnDelete(slug) {
        Swal.fire({
            title: 'Bạn có chắc muốn xóa nhân viên này?',
            text: "Bạn sẽ không thể khôi phục nếu tiếp tục!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Tiếp tục',
            cancelButtonText: 'Quay lại'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.replace("/admin/deleteStaff/" + slug);
            }
        })
    }
</script>